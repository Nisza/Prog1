    void save ( std::fstream & out )
    {
        out << " "
        << n_layers;
        
        for ( int i {0}; i < n_layers; ++i )
            out << " " << n_units[i];
            
            for ( int i {1}; i < n_layers; ++i )
            {
                for ( int j {0}; j < n_units[i]; ++j )
                {
                    for ( int k {0}; k < n_units[i-1]; ++k )
                    {
                        out << " "
                        << weights[i-1][j][k];
                        
                    }
                }
            }
            
    }
    
private:
    Perceptron ( const Perceptron & );
    Perceptron & operator= ( const Perceptron & );
    
    int n_layers;
    int* n_units;
    double **units;
    double ***weights;
    
};
